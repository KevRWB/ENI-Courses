<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>TPRechercherNombre</display-name>
  <welcome-file-list>
    <welcome-file>formulaireDeSaisie.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>ServletRechercheNombre</servlet-name>
  	<servlet-class>fr.eni.javaee.tp.ServletRechercherNombre</servlet-class>
  	<init-param>
  		<param-name>MIN</param-name>
  		<param-value>500</param-value>
  	</init-param>
  	<init-param>
  		<param-name>MAX</param-name>
  		<param-value>10000</param-value>
  	</init-param>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>ServletRechercheNombre</servlet-name>
  	<url-pattern>/rechercher</url-pattern>
  </servlet-mapping>

</web-app>